@top Program { expression }

@skip { space | LineComment }
@precedence { application @right }

expression {
  Identifier |
  String |
  Boolean |
  Application { expression !application expression } |
  Parentheses { "(" expression ")" }
}

@tokens {
  Identifier { $[a-zA-Z_]$[a-zA-Z_0-9]* }

  String { '"' (!["\\] | "\\" _)* '"' }

  Boolean { "#true" | "#false" }

  LineComment { "//" ![\n]* }

  space { $[ \t\n\r]+ }

  "(" ")"
}

@detectDelim
